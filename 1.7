  File file = SPIFFS.open("/gpio_cfg.bin", FILE_WRITE);
  if (!file) return;
  SAVE_CONFIG(file, numPins);
  SAVE_CONFIG(file, floatPin);
  for (int i = 0; i < numPins; i++) {
    SAVE_CONFIG(file, pins[i]);
    SAVE_CONFIG(file, schedules[i]);
  }
  file.close();
}

